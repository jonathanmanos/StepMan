<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pagebackground"
    android:orientation="vertical"
    tools:context=".Activities.MainTabbedActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4pt"
            android:layout_weight="13"
            android:background="@drawable/box_settings"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mynameview"
                android:text="Welcome, "
                android:textSize="14pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginTop="5pt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageviewstepman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/asset_stepman_stepmanrunning" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">
    <TextView
        android:id="@+id/mylevelview"
        android:text="Level: 1"
        android:textSize="20pt"
        android:layout_marginTop="5pt"
        android:background="@drawable/box_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/mystepview"
        android:text="Steps: 0"
        android:textSize="16pt"
        android:layout_marginTop="5pt"
        android:background="@drawable/box_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/mysteptillview"
        android:text="Steps till level up: 0"
        android:textSize="12pt"
        android:layout_marginTop="5pt"
        android:background="@drawable/box_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/mydifficultyview"
        android:text="Difficulty: Easy"
        android:textSize="12pt"
        android:layout_marginTop="5pt"
        android:background="@drawable/box_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
