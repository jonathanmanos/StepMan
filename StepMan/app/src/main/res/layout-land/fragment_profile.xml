<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:background="@drawable/pagebackground"
    tools:context=".Activities.MainTabbedActivity$PlaceholderFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="?attr/actionBarSize"
            android:orientation="vertical">

        <TextView
            android:id="@+id/mynameview"
            android:text="Welcome, "
            android:textSize="14pt"
            android:layout_marginTop="5pt"
            android:layout_marginLeft="1pt"
            android:background="@drawable/box_shadow"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />


            <ImageView
                android:id="@+id/imageviewstepman"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10pt"
                android:src="@drawable/asset_stepman_stepmanrunning"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="?attr/actionBarSize"
            android:orientation="vertical">

        <TextView
            android:id="@+id/mylevelview"
            android:text="Level: 1"
            android:textSize="14pt"
            android:layout_margin="5pt"
            android:background="@drawable/box_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mystepview"
            android:text="Steps: 0"
            android:textSize="14pt"
            android:layout_margin="5pt"
            android:background="@drawable/box_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mysteptillview"
            android:text="Steps till level up: 0"
            android:textSize="14pt"
            android:layout_margin="5pt"
            android:background="@drawable/box_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mydifficultyview"
            android:text="Difficulty: Easy"
            android:textSize="14pt"
            android:layout_margin="5pt"
            android:background="@drawable/box_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
